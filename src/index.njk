{% extends "layout.njk" %}

{% block head %}
  <title>11ty E-Commerce Demo</title>
  <link rel="stylesheet" href="/css/product-grid.css" />
{% endblock %}

{% block content %}
  <main>
    <ul class="product-grid">
      {% for product in products %}
        <li>
          <a class="product" href="/product/{{ product.slug }}">
            <div class="product-image">
              <img alt="" height="427" width="640" src="{{ product.image }}" />
            </div>
            <div class="product-description">
              {{ product.name }}
            </div>
            <div class="product-price">
              {{ product.price }}
            </div>
          </a>
        </li>
      {% endfor %}
    </ul>
  </main>
{% endblock %}
